{
  "expo": {
    "name": "mappifiy-client",
    "slug": "mappifiy-client",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/mappify-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "package": "com.gil-kevin.mappify",
      "adaptiveIcon": {
        "foregroundImage": "./assets/mappify-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "favicon": "./assets/mappify-icon.png"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera",
          "microphonePermission": "Allow $(PRODUCT_NAME) to access your microphone",
          "recordAudioAndroid": true
        }
      ],
      [
        "expo-font",
        {
          "fonts": {
            "Inter-Black": "./assets/fonts/Inter-Black.otf",
            "Alef-Bold": "./assets/fonts/Alef-Bold.ttf"
          }
        }
      ]
    ]
  }
}
